# Description:
#   Baby Motivation
#
# Dependencies:
#   None
#
# Configuration:
#   None
#
# Commands:
#   hubot lunch me - Suggest a lunch spot
#   hubot hungry - Food Time!
#
# Author:
#   nick

lunches = [
  "http://www.choptsalad.com",
  "http://www.theoriginalambrosia.com",
  "http://www.westfield.com/montgomery",
  "http://crispjuicy.com",
  "http://www.yelp.com/biz/don-pollo-chevy-chevy-chase",
  "http://www.mobysonline.com",
  "http://www.yelp.com/biz/rock-cafe-bethesda"
]

module.exports = (robot) ->
  lunch_regex = /lunch me/i
  robot.hear lunch_regex, (msg) ->
    msg.send msg.random lunches

  hungry_regex = /hungry|food|\s+eat\s+|lunch|dinner|cake/i
  robot.hear hungry_regex, (msg) ->
    msg.send "Did somebody say food? (chompy)(cake)"

